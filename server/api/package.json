{
  "name": "server",
  "version": "1.0.0",
  "description": "RESTful API for chat room",
  "main": "app/app.js",
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "server": "node dist-server/dist/bin/www",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./app --out-dir dist-server",
    "clean": "rimraf app/dist-server",
    "watch": "nodemon",
    "test": "jest"
  },
  "keywords": [
    "express"
  ],
  "author": "alex",
  "license": "MIT",
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "core-js": "^2.6.9",
    "cors": "^2.8.4",
    "elasticsearch": "^16.7.1",
    "error-handler": "^1.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-routes-mapper": "^1.1.0",
    "express-session": "^1.17.0",
    "helmet": "^3.12.0",
    "http": "0.0.1-security",
    "jsonwebtoken": "^8.2.1",
    "methods": "^1.1.2",
    "mongoose": "^5.8.11",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.9.1",
    "npm-run-all": "^4.1.5",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "sequelize": "^5.21.4",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.5",
    "@babel/core": "^7.11.5",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/polyfill": "^7.11.5",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "husky": "^0.14.3",
    "jest": "^24.8.0",
    "nodemon": "^1.19.4",
    "shx": "^0.2.2",
    "supertest": "^3.0.0"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
